# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.c text
*.h text
*.cpp text
*.hpp text
*.py text
*.js text
*.html text
*.css text
*.md text
*.txt text
*.json text
*.yml text
*.yaml text

# ESP32 specific files
*.bin binary
*.elf binary
*.map text

# Python files
*.py text eol=lf
*.pyx text
*.pxd text
*.pxi text

# Jupyter notebooks
*.ipynb text

# Data files
*.csv text
*.tsv text
*.sql text

# Images (binary)
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.ico binary
*.svg text

# Archives (binary)
*.zip binary
*.tar.gz binary
*.tgz binary
*.7z binary

# Documents (binary)
*.pdf binary
*.doc binary
*.docx binary

# IDE files
*.code-workspace text
*.vscode/* text

# Log files
*.log text

# Configuration files
*.ini text
*.cfg text
*.conf text
*.config text

# License files
LICENSE* text
CHANGELOG* text
README* text
CONTRIBUTING* text

# Line ending preferences
*.sh text eol=lf
*.bat text eol=crlf

# Exclude files from export-ignore
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
*.md export-ignore
docs/ export-ignore

# Large files (use Git LFS if needed)
*.db filter=lfs diff=lfs merge=lfs -text
*.sqlite filter=lfs diff=lfs merge=lfs -text
*.db3 filter=lfs diff=lfs merge=lfs -text 